<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/parent_item_product_promo">

        <ImageView
                android:layout_width="0dp"
                android:layout_height="150dp"
                tools:srcCompat="@tools:sample/avatars[1]"
                android:id="@+id/img_item_product"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_item_name_product"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/img_item_product"
                app:layout_constraintStart_toStartOf="@+id/img_item_product"
                android:textStyle="bold"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_item_desc_product"
                app:layout_constraintTop_toBottomOf="@+id/tv_item_name_product"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="@+id/tv_item_name_product"
                android:textSize="12sp"/>
        <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/img_item_fav_product"
                app:layout_constraintStart_toStartOf="@+id/img_item_product"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/img_item_product"
                app:srcCompat="@drawable/ic_favorite_black"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_item_price_product"
                app:layout_constraintTop_toBottomOf="@+id/tv_item_desc_product"
                app:layout_constraintStart_toStartOf="@+id/tv_item_desc_product"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:text="@string/txt_price_dolar"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>