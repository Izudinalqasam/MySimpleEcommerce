<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            tools:srcCompat="@tools:sample/avatars[1]"
            android:id="@+id/img_simple_stuff"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_title_simple_stuff"
            app:layout_constraintTop_toTopOf="@+id/img_simple_stuff"
            app:layout_constraintStart_toEndOf="@+id/img_simple_stuff"
            android:layout_marginStart="16dp"
            android:textStyle="bold"
            android:textSize="16sp"/>
    <TextView
            android:text="The Nintendo Switch was released on March 3, 2017 and is Nintendo's second entry in the eighth generation of home video game consoles. The system was code-named Nintendo NX prior to its official announcement. It is a hybrid device that can be used as a home console inserted to the Nintendo Switch Dock attached to a television"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:id="@+id/tv_desc_simple_stuff"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_simple_stuff"
            app:layout_constraintStart_toEndOf="@+id/img_simple_stuff"
            android:layout_marginStart="16dp"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
    <TextView
            android:text="$340"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_price_simple_stuff"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_desc_simple_stuff"
            app:layout_constraintStart_toEndOf="@+id/img_simple_stuff"
            android:layout_marginStart="16dp"
            android:textStyle="bold"/>
</android.support.constraint.ConstraintLayout>